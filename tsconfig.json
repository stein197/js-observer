{
	"compilerOptions": {
		"outDir": ".",
		"rootDir": "src",
		"target": "ESNext",
		"strict": true,
		"module": "CommonJS",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/*.ts"
	],
	"exclude": []
}
