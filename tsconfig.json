{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"module": "CommonJS",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"*.ts"
	]
}
